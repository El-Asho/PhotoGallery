
<PhotoLibrary>
   BoxLayout:
      orientation: "vertical"
      BoxLayout:
         orientation: "horizontal"
         BoxLayout:
            orientation: "vertical"
            TextInput:
               id: images
               hint_text: "Enter Image"
               size_hint: 1,.5
            Button:
               text: "Black and White"
               size_hint: 1,.5
            Button:
               text: "Line Drawing"
               size_hint: 1,.5
            Button:
               text: "Sepia"
               size_hint: 1,.5
               on_release: root.sepia("text.images")
         BoxLayout:
            orientation: "vertical"
            Button:
               text: "Load Image"
               size_hint: 1,.5
            Button
               text: "Inverse"
               size_hint: 1,.5
               on_release: root.invert(text.images)
            Button:
               text: "Pointillism"
               size_hint: 1,.5
            Button:
               text: "Pixelate"
               size_hint: 1,.5
      Label:
         id: image
         size_hint: 2,2



